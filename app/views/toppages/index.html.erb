<!--  #yield :cover に埋め込まれる -->
<% content_for :cover do %>
    <div class="cover">
        <div class="cover-inner">
            <div class="cover-contents">
                <h1>素敵なモノと出会う場所</h1>
                <!-- unlessはifの反対。ifはtrueの時処理を実行し、unlessはfalseのときの実行 -->
                <!-- ログインしていなければ、モノリストを始めるボタンを表示し、ログインしていなければ非表示 -->
                <% unless logged_in? %>
                    <%= link_to 'モノリストを始める', signup_path, class: 'btn btn-success btn-lg' %>
                <% end %>
            </div>
        </div>
    </div>
<% end %>

